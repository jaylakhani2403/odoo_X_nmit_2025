# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/odoo_nmit?schema=public"
# For production, use: postgresql://username:password@your-host:5432/odoo_nmit?schema=public
# For MySQL: mysql://username:password@localhost:3306/odoo_nmit
# For SQLite: file:./dev.db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# API Configuration
API_VERSION=v1

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Other Configuration
BCRYPT_ROUNDS=12
